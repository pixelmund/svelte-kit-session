{
  "compilerOptions": {                 
    "target": "ES2017",                          
    "module": "CommonJS",
    "lib": ["es6"], 
    "outDir": "dist",
    "rootDir": "src",            
    "declaration": true,                   
    "strict": true,                           
    "noImplicitAny": true,                 
    "strictNullChecks": true,              
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  }
}
